<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:id="@+id/principal"
        android:layout_height="match_parent"
        android:background="@color/gray_white"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="15dp">

                <!-- Logo -->
                <ImageView
                        android:id="@+id/googleAssistantIcon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/google_assistant_logo"
                        android:contentDescription="@string/google_assistant" />

                <!-- Space -->
                <Space
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                <!-- Time -->
                <ImageView
                        android:id="@+id/sunIcon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:scaleType="fitEnd"
                        app:srcCompat="@drawable/time_icon"
                        android:contentDescription="@string/time_status" />


                <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/current_time" />

            </LinearLayout>

            <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/good_morning_light_traffic_ahead"
                    android:textSize="28sp"
                    android:layout_marginVertical="15dp"
                    android:layout_marginHorizontal="25dp"
                    android:textStyle="bold" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="127dp"
                    android:paddingHorizontal="10dp"
                    android:baselineAligned="false">

                <LinearLayout
                        android:id="@+id/mapsButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_card"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:orientation="vertical"
                        android:focusable="true">

                    <ImageView
                            android:id="@+id/mapsIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="67dp"
                            android:layout_weight="1"
                            android:padding="14dp"
                            app:srcCompat="@drawable/google_maps"
                            android:contentDescription="@string/maps" />

                    <TextView
                            android:id="@+id/textView334243"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/maps" />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/hangoutsButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_card"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:orientation="vertical"
                        android:focusable="true">

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="67dp"
                            android:layout_weight="1"
                            android:padding="14dp"
                            app:srcCompat="@drawable/google_hangouts"
                            android:contentDescription="@string/hangouts" />

                    <TextView
                            android:id="@+id/textView1231233"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/hangouts" />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/gmailButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_card"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:orientation="vertical"
                        android:focusable="true">

                    <ImageView
                            android:id="@+id/gmailIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="67dp"
                            android:layout_weight="1"
                            android:padding="14dp"
                            app:srcCompat="@drawable/gmail"
                            android:contentDescription="@string/gmail" />

                    <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/gmail" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="25dp">

                <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:padding="5dp"
                        app:srcCompat="@drawable/avatar_space"
                        android:contentDescription="@string/just_for_you" />

                <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/just_for_you"
                        android:textSize="16sp"
                        android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/firstCard"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_card"
                    android:clickable="true"
                    android:elevation="24dp"
                    android:orientation="horizontal"
                    android:focusable="true">

                <ImageView
                        android:id="@+id/navigationIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:padding="30dp"
                        app:srcCompat="@drawable/navigation"
                        android:contentDescription="@string/maps_route" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:orientation="vertical">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/textView35"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="bottom"
                                android:text="@string/time_12_min"
                                android:textAlignment="gravity"
                                android:textSize="20sp"
                                android:textColor="@color/green"
                                android:textStyle="bold" />

                        <TextView
                                android:id="@+id/textView35_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="bottom"
                                android:text="@string/to_tacolicious"
                                android:textAlignment="gravity"
                                android:textSize="20sp"
                                android:layout_marginStart="6dp"
                                android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/maps_route"
                            android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/secondCard"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_card"
                    android:clickable="true"
                    android:elevation="24dp"
                    android:orientation="horizontal"
                    android:focusable="true">

                <ImageView
                        android:id="@+id/telephoneIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:padding="30dp"
                        app:srcCompat="@drawable/telephone"
                        android:contentDescription="@string/missed_call" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"

                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:gravity="bottom"
                            android:text="@string/thomas_williams"
                            android:textAlignment="gravity"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/missed_call"
                            android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/thirdCard"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_card"
                    android:clickable="true"
                    android:elevation="24dp"
                    android:orientation="horizontal"
                    android:focusable="true">

                <ImageView
                        android:id="@+id/mailIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:padding="30dp"
                        app:srcCompat="@drawable/email"
                        android:contentDescription="@string/new_email" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:gravity="bottom"
                            android:text="@string/little_manila"
                            android:textAlignment="gravity"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    <TextView
                            android:id="@+id/textView9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/new_email"
                            android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:background="@color/white"
            android:elevation="30dp"
            android:paddingTop="24dp"
            android:paddingBottom="20dp"
            android:translationZ="20dp">

        <ImageView
                android:id="@+id/voiceIcon"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:clickable="true"
                android:scaleType="fitCenter"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/googlemic"
                android:contentDescription="@string/google_assistant"
                android:focusable="true" />

        <ImageView
                android:id="@+id/arrowIcon"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="35dp"
                android:scaleType="fitCenter"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/arrow_down_box"
                android:contentDescription="@string/more"
                app:tint="@color/light_blue" />
    </RelativeLayout>


</LinearLayout>