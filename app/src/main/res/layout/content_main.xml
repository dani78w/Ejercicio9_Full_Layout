<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FFFFFF"
    android:translationZ="30dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_margin="15dp">

                <ImageView
                    android:id="@+id/googleAssistantIcon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/google_assistant_logo"
                    android:contentDescription="Google AsistanT Icon" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3" />

                <ImageView
                    android:id="@+id/sunIcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:contentDescription="SunIcon"
                    android:padding="10dp"
                    android:scaleType="fitEnd"
                    app:srcCompat="@drawable/sun" />/>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"

                    android:gravity="center"
                    android:text="Cloudy 72ยบ" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/good_morning_nlight_trafic_ahead"
                    android:textSize="40dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="127dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp">

                <LinearLayout
                    android:id="@+id/mapsButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_card"
                    android:clickable="true"
                    android:elevation="4dp"

                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/mapsIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="67dp"
                        android:layout_weight="1"
                        android:padding="14dp"
                        app:srcCompat="@drawable/google_maps"


                        />

                    <TextView
                        android:id="@+id/textView334243"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/maps" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hangoutsButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_card"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="67dp"
                        android:layout_weight="1"
                        android:padding="14dp"
                        app:srcCompat="@drawable/google_hangouts" />

                    <TextView
                        android:id="@+id/textView1231233"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/hangouts" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gmailButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_card"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/gmailIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="67dp"
                        android:layout_weight="1"
                        android:padding="14dp"
                        app:srcCompat="@drawable/gmail" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/gmail" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_margin="15dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    app:srcCompat="@drawable/ai" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/just_for_you"
                    android:textAlignment="viewStart"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/firstCard"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_margin="15dp"

                android:layout_weight="1"
                android:background="@drawable/rounded_card"
                android:clickable="true"
                android:elevation="24dp"
                android:fadingEdgeLength="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/navigationIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:padding="30dp"
                    app:srcCompat="@drawable/navigation" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView35"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="32dp"
                        android:gravity="bottom"
                        android:text="@string/_12_min_to_tacoliocus"
                        android:textAlignment="gravity"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text="@string/maps_route"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/secondCard"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_card"
                android:clickable="true"
                android:elevation="24dp"
                android:fadingEdgeLength="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/telephoneIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:padding="30dp"
                    app:srcCompat="@drawable/telephone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="32dp"
                        android:gravity="bottom"
                        android:text="@string/thomas_williams"
                        android:textAlignment="gravity"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text="@string/missed_call"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/thirdCard"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_card"
                android:clickable="true"
                android:elevation="24dp"
                android:fadingEdgeLength="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mailIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:padding="30dp"
                    app:srcCompat="@drawable/email" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="32dp"
                        android:gravity="bottom"
                        android:text="@string/litle_manila"
                        android:textAlignment="gravity"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text="@string/new_email"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="72dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>